<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rojakrecycle">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RojakRecycle">
        <activity
            android:name=".Map.MapActivity"
            android:exported="false" />

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/map_key" />

        <activity
            android:name=".SplashScreen_MainActivity"
            android:exported="true" />
        <activity
            android:name=".navBar.BottomNavigationActivity"
            android:exported="false"
            android:label="@string/RojakRecycle" />
        <activity
            android:name=".DescriptionActivity"
            android:exported="true" />
        <activity
            android:name=".Redeem.TOOLS.RedeemActivity"
            android:exported="true" />
        <activity
            android:name=".Redeem.TOOLS.RedeemDescriptionActivity"
            android:exported="true" />
        <activity
            android:name=".login.LoginActivity"
            android:label="RojakRecycle Login"
            android:theme="@style/Theme.Design.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".login.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.Design.NoActionBar" />
        <activity
            android:name=".Partner4_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Partner3_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Partner2_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Partner1_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Courier3_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Courier2_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Courier1_MainActivity"
            android:exported="true" />
        <activity
            android:name=".Courier_MainActivity"
            android:exported="true" />
        <activity
            android:name=".PartnerStore_MainActivity"
            android:exported="true" />
        <activity
            android:name=".RecycleStore_MainActivity"
            android:exported="true" />
        <activity
            android:name=".RecyclePage_MainActivity"
            android:exported="true" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>